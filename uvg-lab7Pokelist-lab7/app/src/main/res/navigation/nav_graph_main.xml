<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main.xml"
    app:startDestination="@id/progressBar2">

    <fragment
        android:id="@+id/progressBar2"
        android:name="gt.uvg.pokelist.progress_bar"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_progress_bar" >
        <action
            android:id="@+id/action_progress_bar_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="gt.uvg.pokelist.view.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="gt.uvg.pokelist.view.DetailFragment"
        android:label="@string/pokemon_detail"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="pokemonId"
            app:argType="integer" />
    </fragment>

</navigation>